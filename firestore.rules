// firestore.rules

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isSuperuser() {
      return request.auth.token.role == 'Superuser';
    }

    function isUserOfCompany(companyId) {
      return request.auth.token.companyId == companyId;
    }

    function isAdminOfCompany(companyId) {
      return isUserOfCompany(companyId) && request.auth.token.role == 'Admin';
    }

    // --- REGLAS PARA COLECCIONES ---
    match /users/{userId} {
      // Un Superuser puede hacer todo.
      // Un usuario puede leer y actualizar su propio perfil.
      allow read, update: if isSuperuser() || request.auth.uid == userId;
      // Un Admin puede leer los perfiles de su propia empresa.
      allow list: if isAdminOfCompany(resource.data.companyId);
    }

    match /companies/{companyId} {
      // Solo un Superuser puede crear o eliminar empresas.
      allow create, delete: if isSuperuser();
      // Un Admin puede leer y actualizar su propia empresa.
      allow read, update: if isAdminOfCompany(companyId);
      // Un Usuario puede leer los datos de su empresa.
      allow get: if isUserOfCompany(companyId);

      // Reglas para la subcolección de tareas
      match /tasks/{taskId} {
        // El Admin o Usuario de la empresa puede leer y crear tareas.
        allow read, create: if isAdminOfCompany(companyId) || isUserOfCompany(companyId);
        // El Admin puede actualizar/borrar cualquier tarea de su empresa.
        // Un usuario solo puede actualizar/borrar las tareas que él creó.
        allow update, delete: if isAdminOfCompany(companyId) || (isUserOfCompany(companyId) && resource.data.createdBy == request.auth.uid);
      }
    }
  }
}
